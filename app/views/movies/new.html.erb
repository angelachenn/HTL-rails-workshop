<h1>New movie</h1>

  <%= form_with(model: @movie) do |form| %>
    <% if @movie.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

        <ul>
          <% @movie.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :overview %>
      <%= form.text_area :overview %>
    </div>

    <div class="field">
      <%= form.label :release_date %>
      <%= form.text_field :release_date %>
    </div>

    <div class="field">
      <%= form.label :watched? %>
      <%= form.check_box :watched %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  <%= link_to "Back", movies_path %>
  