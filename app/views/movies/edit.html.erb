<%= render "shared/nav" %>

<div class="container">

  <div class="row align-items-start g-2 my-5">
    <div class="col-6">
        <h2 class="display-2">Edit Movie</h2>

        <%= form_for @movie do |form| %>

        <div class="field">
          <%= form.label :watched? %>
          <%= form.check_box :watched %>
        </div>

        <div class="field">
          <%= form.label :review %>
          <%= form.number_field :review, in: 1.0..5.0, step: 0.5, style: "width: 6rem" %>
        </div>

        <%= button_to "Update", @movie, {method: :put, class: "btn btn-primary my-2"} %>
        <%= link_to "Back", movie_path(@movie.id), class: "btn btn-dark"%>
      <% end %>
    </div>
  </div>
</div>
