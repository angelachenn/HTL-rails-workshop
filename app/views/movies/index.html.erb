<h1>All movies</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Overview</th>
        <th>Release Date</th>
        <th>Ratings</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.title %></td>
          <td><%= movie.overview %></td>
          <td><%= movie.release_date %></td>
          <td><%= movie.ratings? %></td>
          <td><%= link_to "Show", movie %></td>
          <td><%= link_to "Edit", edit_movie_path(movie) %></td>
          <td><%= button_to "Destroy", movie, method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "New Movie", new_movie_path %>
  